<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="1dp"
        android:right="12dp"
        android:bottom="1dp">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#11ADE4"/>

            <size
                android:width="10dp"
                android:height="5dp"/>
            <corners
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"/>
        </shape>

    </item>
    <item
        android:bottom="0dp"
        android:left="10dp"
        android:right="1dp">

        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#0072BC"/>
            <size
                android:width="10dp"
                android:height="5dp"/>
            <corners
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"/>
        </shape>

    </item>
</layer-list>
