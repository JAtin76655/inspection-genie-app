                       app:cardCornerRadius="4dp"
                       app:cardUseCompatPadding="true">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:paddingBottom="10dp">
                           <LinearLayout
