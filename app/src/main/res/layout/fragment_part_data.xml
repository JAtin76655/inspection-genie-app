<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_white"
    tools:context=".Inspection.PageFragments.PartDataFragment">
    <ImageView
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/inspection_genie"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_20sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lit_grey"
            android:padding="@dimen/_20sdp">
            <ImageView
                android:id="@+id/img_supplier"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:src="@drawable/supplier_data"/>
            <TextView
                android:layout_toRightOf="@+id/img_supplier"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/_35sdp"
                android:textSize="@dimen/_16sdp"
                android:text="Supplier Data"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_20sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lit_grey"
            android:padding="@dimen/_20sdp">
            <ImageView
                android:id="@+id/img_summon"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:src="@drawable/summon_data"/>
            <TextView
                android:layout_toRightOf="@+id/img_summon"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_35sdp"
                android:textSize="@dimen/_16sdp"
                android:text="SUMMON DATA"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="@dimen/_20sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lit_grey"
            android:padding="@dimen/_20sdp">
            <ImageView
                android:id="@+id/img_customer"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:src="@drawable/customer_data"/>
            <TextView
                android:layout_toRightOf="@+id/img_customer"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_35sdp"
                android:textSize="@dimen/_16sdp"
                android:text="CUSTOMER DATA"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_gradient_drawable_radius_less"
        android:paddingLeft="180dp"
        android:paddingTop="16dp"
        android:paddingRight="180dp"
        android:paddingBottom="16dp"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:text="NEXT"/>

</LinearLayout>