<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/line_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:visibility="visible">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:padding="5dp"
            android:text="@string/please_enter_your_email_to_reset_password"
            android:textAllCaps="true"
            android:textColor="@color/btn_text"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/pwd_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edittext"
            android:gravity="center"
            android:hint="@string/email_example_com"
            android:padding="5dp"
            android:textSize="20sp" />
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_white_drawable_radius_less"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/btn_cancel"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:background="@drawable/btn_gradient_drawable_radius_less"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/line_password_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingTop="20dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:padding="5dp"
            android:text="Enter OTP"
            android:textAllCaps="true"
            android:textColor="@color/btn_text"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/pwd_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edittext"
            android:inputType="numberPassword"
            android:gravity="center"
            android:hint="*****"
            android:padding="15dp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:padding="5dp"
            android:text="New Password"
            android:textAllCaps="true"
            android:textColor="@color/btn_text"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edittext"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:padding="5dp"
            android:text="Confirm  Password"
            android:textAllCaps="true"
            android:textColor="@color/btn_text"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/cf_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_edittext"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <Button
                android:id="@+id/pwd_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/btn_white_drawable_radius_less"
                android:text="Cancel"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/pwd_btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/pwd_btn_cancel"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_gradient_drawable_radius_less"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingTop="20dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_tick"/>


        <TextView
            android:id="@+id/txt_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/raleway_bold"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:padding="5dp"
            android:text="@string/email_sent_please_check_your_mail"
            android:textAllCaps="true"
            android:textColor="@color/btn_text"
            android:layout_marginTop="20dp"
            android:textSize="18sp" />

    </LinearLayout>




</RelativeLayout>