<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inspection.MechanicalInspection"
    android:orientation="vertical"
    android:background="@drawable/ic_extended_screen_background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/mechanical_inspection"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/table_header"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/find_part_marking_section_of_data_sheet_and_enter_here"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="288dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:id="@+id/et_part_marking"
                        android:padding="10dp"
                        android:hint="PART MARKING"
                        android:background="@drawable/shape_bg_edittext"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/part_marking_image"
                        android:layout_width="211dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg_edittext"
                        android:hint="@string/height_in_inches"
                        android:src="@drawable/ic_add"
                        android:textAllCaps="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/table_header"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/enter_length_data_with_picture_ft_cm_in_mm"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="288dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:id="@+id/et_Length_data"
                        android:padding="10dp"
                        android:hint="@string/length"
                        android:background="@drawable/shape_bg_edittext"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/length_data_image"
                        android:layout_width="211dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg_edittext"
                        android:hint="@string/height_in_inches"
                        android:src="@drawable/ic_add"
                        android:textAllCaps="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/table_header"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/enter_width_data_with_picture_ft_cm_in_mm"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="288dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:id="@+id/et_width_data"
                        android:padding="10dp"
                        android:hint="@string/width"
                        android:background="@drawable/shape_bg_edittext"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/width_data_image"
                        android:layout_width="211dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg_edittext"
                        android:hint="@string/height_in_inches"
                        android:src="@drawable/ic_add"
                        android:textAllCaps="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@color/table_header"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/enter_thickness_data_with_picture_ft_cm_in_mm"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="288dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:id="@+id/et_thickness_data"
                        android:padding="10dp"
                        android:hint="@string/thickness"
                        android:background="@drawable/shape_bg_edittext"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/thickness_data_image"
                        android:layout_width="211dp"
                        android:layout_height="85dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_bg_edittext"
                        android:hint="@string/height_in_inches"
                        android:src="@drawable/ic_add"
                        android:textAllCaps="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_nxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_gradient_drawable"
            android:paddingLeft="140dp"
            android:paddingTop="10dp"
            android:paddingRight="140dp"
            android:paddingBottom="10dp"
            android:text="NEXT STEP"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>